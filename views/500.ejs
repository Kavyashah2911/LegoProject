<!-- 500.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Internal Server Error</title>
  <style>
    /* CSS for 500 page */
    body {
      font-family: Arial, sans-serif;
      background-color: #f3f4f6; /* Light gray background */
    }

    .container {
      padding: 20px;
    }

    .hero {
      background-color: #f8fafc; /* Light blue background */
      border-radius: 10px;
      padding: 20px;
    }

    .hero-content {
      padding: 20px;
    }

    h1 {
      font-size: 5rem;
      color: #1f2937; /* Dark blue text color */
    }

    p {
      font-size: 1.2rem;
      color: #4b5563; /* Gray text color */
    }

    .btn {
      display: inline-block;
      padding: 10px 20px;
      background-color: #3b82f6; /* Blue button color */
      color: #fff; /* White text color */
      text-decoration: none;
      border-radius: 5px;
      transition: background-color 0.3s ease;
    }

    .btn:hover {
      background-color: #2563eb; /* Darker blue on hover */
    }
  </style>
</head>

<body tabindex="-1">
  <!-- Include navbar partial -->
  <% include('partials/navbar', { page: '/500' }) %>

  <div class="container mx-auto">
    <div class="hero bg-base-200 rounded-lg">
      <div class="hero-content text-center">
        <div class="max-w-md">
          <h1 class="text-5xl font-bold">500</h1>
          <p class="py-6">Oops! Something went wrong on our end.</p>
          <p class="pb-4"><%= message %></p>
          <a href="/" class="btn btn-primary">Go Home</a>
        </div>
      </div>
    </div>
  </div>
</body>

</html>
